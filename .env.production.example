# Digital Pardna Production Environment Configuration
# Copy this to .env.production and fill in your actual values

# =================================
# INFRASTRUCTURE SETTINGS
# =================================
# Account: PardnaLink-Administration (594194992190)
# EC2 Instance: i-0c35787ee59f83a71
# Domain: pardnalink.com

DOMAIN_NAME=pardnalink.com
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =================================
# DATABASE CONFIGURATION
# =================================
POSTGRES_DB=digital_pardna
POSTGRES_USER=pardna_user
POSTGRES_PASSWORD=your_secure_postgres_password_32_chars_min

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_PASSWORD=your_secure_redis_password_32_chars_min

# =================================
# SECURITY & AUTHENTICATION
# =================================
JWT_SECRET=your_jwt_secret_64_chars_minimum_for_production_security
BCRYPT_ROUNDS=12

# =================================
# STRIPE PAYMENT PROCESSING
# =================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =================================
# JAMAICAN BANKING APIS
# =================================

# National Commercial Bank (NCB)
NCB_API_KEY=your_ncb_api_key
NCB_API_SECRET=your_ncb_api_secret

# Scotiabank Jamaica
SCOTIA_API_KEY=your_scotia_api_key
SCOTIA_API_SECRET=your_scotia_api_secret

# LYNK Mobile Money
LYNK_API_KEY=your_lynk_api_key
LYNK_API_SECRET=your_lynk_api_secret

# =================================
# KYC VERIFICATION SERVICES
# =================================

# Veriff Identity Verification
VERIFF_API_KEY=your_veriff_api_key
VERIFF_SECRET=your_veriff_secret_key

# Tax Administration Jamaica (TAJ)
TAJ_API_KEY=your_taj_api_key
TAJ_API_SECRET=your_taj_api_secret

# Creditinfo Jamaica
CREDITINFO_API_KEY=your_creditinfo_api_key
CREDITINFO_SECRET=your_creditinfo_secret

# =================================
# REGULATORY COMPLIANCE
# =================================

# Bank of Jamaica (BOJ) Reporting
BOJ_REPORTING_API_KEY=your_boj_api_key
BOJ_REPORTING_SECRET=your_boj_secret

# National Housing Trust (NHT)
NHT_API_KEY=your_nht_api_key
NHT_API_SECRET=your_nht_secret

# =================================
# COMMUNICATION SERVICES
# =================================

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1876xxxxxxx

# WhatsApp Business API
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_business_token
WHATSAPP_BUSINESS_PHONE_ID=your_whatsapp_phone_number_id

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@pardnalink.com

# =================================
# APPLICATION SETTINGS
# =================================

# Server Configuration
NODE_ENV=production
LOG_LEVEL=info
HEALTH_CHECK_TIMEOUT=30000

# Keeper Service
KEEPER_INTERVAL=60000

# Data Storage
DATA_PATH=/opt/pardna/data

# =================================
# MONITORING & LOGGING
# =================================

# Enable production monitoring
ENABLE_MONITORING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Log retention (days)
LOG_RETENTION_DAYS=30

# =================================
# SECURITY HEADERS & CORS
# =================================
CORS_ORIGIN=https://pardnalink.com
TRUSTED_PROXIES=172.20.0.0/16

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# SESSION CONFIGURATION
# =================================
SESSION_SECRET=your_session_secret_64_chars_minimum
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=pardnalink-backups-594194992190

# =================================
# ADDITIONAL SECURITY
# =================================
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
RATE_LIMITING_ENABLED=true

# =================================
# PERFORMANCE TUNING
# =================================
MAX_REQUEST_SIZE=10mb
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000